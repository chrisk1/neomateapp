<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.londonnts.neomate"
        versionCode="37" 
        version   = "2.3.1">

	<gap:config-file platform="ios" parent="CFBundleShortVersionString">
	<string>17</string>
	</gap:config-file>

	<!-- com.incubateltd.neomate Android / com.londonnts.neomate iOS -->
    <!-- versionCode is optional and Android only -->

    <name>NeoMate</name>

    <description>
        Helps neonatal staff calculate drug doses for babies on NICU in common emergency situations. 
    </description>

    <author href="http://www.paediatrics.co.uk" email="hello@paediatrics.co.uk">
        Christopher Kelly 
    </author>

	<access origin="http://www.paediatrics.co.uk" browserOnly="true" />
	<access origin="*" />

    <preference name="phonegap-version" value="3.7.0" />
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />
	<preference name="webviewbounce" value="false" />
	<preference name="stay-in-webview" value="false" />
	<preference name="exit-on-suspend" value="false" />
	<preference name="show-splash-screen-spinner" value="false" />
	<preference name="auto-hide-splash-screen" value="false" />
	<preference name="AutoHideSplashScreen" value="false" />
    <preference name="splash-screen-duration" value="10000" />
    <preference name="SplashScreenDelay" value="100000" />

	<preference name="target-device" value="handset" />
	<preference name="permissions" value="none"/>

<!-- Defaults -->
	<icon src="icon.png" />
	<gap:splash src="splash.png" />

<!-- iOS -->
	<!-- iPhone and iPod touch -->
	<icon src="icons/ios/icon-57.png" gap:platform="ios" width="57" height="57" />
	<icon src="icons/ios/icon-57@2x.png" gap:platform="ios" width="114" height="114" />
	<icon src="icons/ios/icon-60@2x.png" gap:platform="ios" width="120" height="120" />
	<gap:splash src="splash/ios/Default.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="splash/ios/Default@2x.png" gap:platform="ios" width="640" height="960" />

	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<gap:splash src="splash/ios/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

	<!-- iPhone 6 -->
	<icon src="icons/ios/icon-60@3x.png" gap:platform="ios" width="180" height="180" />
	<gap:splash src="splash/ios/Default-667h@2x.png" gap:platform="ios" width="750" height="1334" />
	<gap:splash src="splash/ios/Default-Portrait-736h@3x.png" gap:platform="ios" width="1242" height="2208" />

<!-- Android -->
	<icon src="icons/android/ldpi36.png" gap:platform="android" gap:qualifier="ldpi" />
	<icon src="icons/android/mdpi48.png" gap:platform="android" gap:qualifier="mdpi" />
	<icon src="icons/android/hdpi72.png" gap:platform="android" gap:qualifier="hdpi" />
	<icon src="icons/android/xhdpi96.png" gap:platform="android" gap:qualifier="xhdpi" />
	<icon src="icons/android/xxhdpi144.png" gap:platform="android" gap:qualifier="xxhdpi" />

	<gap:splash src="splash/android/drawable-mdpi/neomate.9.png" gap:platform="android" gap:qualifier="mdpi" />
	<gap:splash src="splash/android/drawable-hdpi/neomate.9.png" gap:platform="android" gap:qualifier="hdpi" />
	<gap:splash src="splash/android/drawable.xhdpi/neomate.9.png" gap:platform="android" gap:qualifier="xhdpi" />
	<gap:splash src="splash/android/drawable.xxhdpi/neomate.9.png" gap:platform="android" gap:qualifier="port-xxhdpi" />
	<!-- limit to Android 4.2 onwards -->
	<preference name="android-minSdkVersion" value="17" />

<!-- PLUGINS -->
	<gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
	<gap:config-file platform="ios" parent="UIStatusBarHidden">
	    <true/>
	</gap:config-file>
	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
	    <false/>
	</gap:config-file>
	<preference name="StatusBarOverlaysWebView" value="true" />

	<gap:plugin name="cordova-plugin-splashscreen" source="npm" />
	<gap:plugin name="cordova-plugin-inappbrowser" source="npm" />
	<gap:plugin name="cordova-plugin-dialogs" source="npm" />
	<gap:plugin name="com.adobe.plugins.gaplugin" version="2.4.0" />
	<gap:plugin name="cordova-plugin-globalization" source="npm" />
	<gap:plugin name="org.pushandplay.cordova.apprate" version="1.1.7" />
	<gap:plugin name="cordova-plugin-device" source="npm" />
	<gap:plugin name="com.telerik.plugins.wkwebview" version="0.2.5" />
</widget>