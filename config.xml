<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.londonnts.neomate"
        version   = "3.1.0"
        android-versionCode="41.1.0"
        ios-CFBundleVersionstring = "3.1.0" >

    <gap:config-file platform="ios" parent="CFBundleShortVersionString">
	<string>24</string>
	</gap:config-file>

	<!-- com.incubateltd.neomate Android / com.londonnts.neomate iOS -->
    <!-- versionCode is optional and Android only -->

    <name>NeoMate</name>

    <description>
        Helps neonatal staff calculate drug doses for babies on NICU in common emergency situations. 
    </description>

    <author href="http://www.paediatrics.co.uk" email="hello@paediatrics.co.uk">
        Christopher Kelly 
    </author>

<!-- Preferences -->
	<access origin="http://www.paediatrics.co.uk" browserOnly="true" />
	<access origin="*" />
	<allow-navigation href="*" />

	<preference name="phonegap-version" value="cli-6.5.0" />
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />
	<preference name="webviewbounce" value="false" />
	<preference name="stay-in-webview" value="false" />
	<preference name="exit-on-suspend" value="false" />

	<preference name="ShowSplashScreenSpinner" value="false"/>
	<preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="100000" />
    <preference name="FadeSplashScreen" value="true"/>
    <preference name="StatusBarOverlaysWebView" value="true" />

	<preference name="target-device" value="handset" />
	<preference name="permissions" value="none"/>
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />
	<platform name="android">
	  <allow-intent href="market:*" />
	</platform>
	<platform name="ios">
	  <allow-intent href="itms:*" />
	  <allow-intent href="itms-apps:*" />
	</platform>

<!-- Android preferences -->
	<preference name="InAppBrowserStorageEnabled" value="true"/>

<!-- ICONS / SPLASH SCREENS -->
<!-- Defaults -->
	<icon src="icon.png" />
	<gap:splash src="splash.png" />

<!-- iOS -->
	<!-- iPhone and iPod touch -->
	<icon src="icons/ios/icon-57.png" gap:platform="ios" width="57" height="57" />
	<icon src="icons/ios/icon-58.png" gap:platform="ios" width="58" height="58" />
	<icon src="icons/ios/icon-80.png" gap:platform="ios" width="80" height="80" />
	<icon src="icons/ios/icon-57@2x.png" gap:platform="ios" width="114" height="114" />
	<icon src="icons/ios/icon-60@2x.png" gap:platform="ios" width="120" height="120" />
    <splash src="splash/ios/Default.png" width="320" height="480"/>
    <splash src="splash/ios/Default@2x.png" width="640" height="960"/>

	<!-- iPhone 5 / iPod Touch (5th Generation) -->
    <splash src="splash/ios/Default-568h@2x.png" width="640" height="1136"/>

	<!-- iPhone 6 -->
	<icon src="icons/ios/icon-152.png" gap:platform="ios" width="152" height="152" />
	<icon src="icons/ios/icon-180.png" gap:platform="ios" width="180" height="180" />
    <splash src="splash/ios/Default-667h@2x.png" width="750" height="1334"/>
    <splash src="splash/ios/Default-Portrait-736h@3x.png" width="1242" height="2208"/>

	<!-- @3x icons -->
	<icon height="87" src="icons/ios/icon-small@3x.png" width="87" />
	<icon height="120" src="icons/ios/icon-60@2x.png" width="120" />
	<icon height="167" src="icons/ios/icon-167.png" width="167" />
	
<!-- Android -->
	<icon src="icons/android/ldpi36.png" gap:platform="android" gap:qualifier="ldpi" />
	<icon src="icons/android/mdpi48.png" gap:platform="android" gap:qualifier="mdpi" />
	<icon src="icons/android/hdpi72.png" gap:platform="android" gap:qualifier="hdpi" />
	<icon src="icons/android/xhdpi96.png" gap:platform="android" gap:qualifier="xhdpi" />
	<icon src="icons/android/xxhdpi144.png" gap:platform="android" gap:qualifier="xxhdpi" />

	<gap:splash src="splash/android/drawable-mdpi/neomate.9.png" gap:platform="android" gap:qualifier="mdpi" />
	<gap:splash src="splash/android/drawable-hdpi/neomate.9.png" gap:platform="android" gap:qualifier="hdpi" />
	<gap:splash src="splash/android/drawable.xhdpi/neomate.9.png" gap:platform="android" gap:qualifier="xhdpi" />
	<gap:splash src="splash/android/drawable.xxhdpi/neomate.9.png" gap:platform="android" gap:qualifier="port-xxhdpi" />
	<!-- limit to Android 4.2 onwards -->
	<preference name="android-minSdkVersion" value="17" />

<!-- PLUGINS -->
  	<preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
  	<feature name="CDVWKWebViewEngine">
        <param name="ios-package" value="CDVWKWebViewEngine" />
    </feature>

	<gap:plugin name="cordova-plugin-statusbar" source="npm" />
	<feature name="StatusBar">
            <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
	<gap:config-file platform="ios" parent="UIStatusBarHidden">
	    <true/>
	</gap:config-file>
	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
	    <false/>
	</gap:config-file>

	<gap:plugin name="cordova-plugin-whitelist" source="npm" />
	<gap:plugin name="cordova-plugin-splashscreen" source="npm" />
	<gap:plugin name="cordova-plugin-inappbrowser" source="npm" />
	<gap:plugin name="cordova-plugin-dialogs" source="npm" />
	<!-- <gap:plugin name="cordova-plugin-google-analytics" source="npm" /> -->
	<gap:plugin name="flyer299-cordova-plugin-google-analytics" source="npm" />
	<gap:plugin name="cordova-plugin-globalization" source="npm" />
	<gap:plugin name="cordova-plugin-apprate" source="npm" />
	<gap:plugin name="cordova-plugin-device" source="npm" />
	<gap:plugin name="cordova-plugin-wkwebview-engine" source="npm" />
</widget>