<?xml version='1.0' encoding='utf-8'?>
<widget android-packageName="com.incubateltd.neomate" android-versionCode="47" id="com.incubateltd.neomate" ios-CFBundleIdentifier="com.londonnts.neomate" ios-CFBundleVersion="3.2.8" version="30" xmlns="http://www.w3.org/ns/widgets">
    <name>NeoMate</name>
    <description>
        Helps neonatal staff calculate drug doses for babies on NICU in common emergency situations. 
    </description>
    <author email="chris@neomate.co.uk" href="http://www.neomate.co.uk">
        Christopher Kelly 
    </author>
    <access origin="*" />
    <allow-navigation href="*" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <preference name="stay-in-webview" value="false" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="blackopaque" />
    <preference name="target-device" value="handset" />
    <preference name="permissions" value="none" />
    <preference name="android-compileSdkVersion" value="33" />
    <preference name="android-targetSdkVersion" value="33" />
    <preference name="GradlePluginGoogleServicesEnabled" value="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <allow-navigation href="http://localhost:8080/*" />
    <platform name="android">
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash_icon_240_new.png" />
        <preference name="AndroidWindowSplashScreenBackground" value="#CC4242" />
    </platform>
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="InAppBrowserStorageEnabled" value="true" />
    <platform name="ios">
        <icon height="180" src="res/ios/icon-60@3x.png" width="180" />
        <icon height="60" src="res/ios/icon-60.png" width="60" />
        <icon height="120" src="res/ios/icon-60@2x.png" width="120" />
        <icon height="76" src="res/ios/icon-76.png" width="76" />
        <icon height="152" src="res/ios/icon-76@2x.png" width="152" />
        <icon height="40" src="res/ios/icon-40.png" width="40" />
        <icon height="80" src="res/ios/icon-40@2x.png" width="80" />
        <icon density="mdpi" height="57" src="res/ios/icon.png" width="57" />
        <icon height="114" src="res/ios/icon@2x.png" width="114" />
        <icon height="72" src="res/ios/icon-72.png" width="72" />
        <icon height="144" src="res/ios/icon-72@2x.png" width="144" />
        <icon height="167" src="res/ios/icon-167.png" width="167" />
        <icon height="29" src="res/ios/icon-small.png" width="29" />
        <icon height="58" src="res/ios/icon-small@2x.png" width="58" />
        <icon height="87" src="res/ios/icon-small@3x.png" width="87" />
        <icon height="50" src="res/ios/icon-50.png" width="50" />
        <icon height="100" src="res/ios/icon-50@2x.png" width="100" />
        <icon src="res/ios/icon-83.5@2x.png" width="167" />
        <icon height="1024" src="res/ios/icon-1024.png" width="1024" />
        <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
    </platform>
    <platform name="android">
        <preference name="ANDROID_FIREBASE_BOM_VERSION" default="30.3.1" />
        <resource-file src="google-services.json" target="app/google-services.json" />
    </platform>

    <platform name="android">
        <resource-file src="res/values/colors.xml" target="app/src/main/res/values/background.xml" />
        <icon background="@color/background" density="ldpi" foreground="res/android/mipmap-mdpi/neomate_round.png" />
        <icon background="@color/background" density="mdpi" foreground="res/android/mipmap-mdpi/neomate_round.png" />
        <icon background="@color/background" density="hdpi" foreground="res/android/mipmap-hdpi/neomate_round.png" />
        <icon background="@color/background" density="xhdpi" foreground="res/android/mipmap-xhdpi/neomate_round.png" />
        <icon background="@color/background" density="xxhdpi" foreground="res/android/mipmap-xxhdpi/neomate_round.png" />
        <icon background="@color/background" density="xxxhdpi" foreground="res/android/mipmap-xxxhdpi/neomate_round.png" />
    </platform>

    <preference name="android-minSdkVersion" value="22" />
    <platform name="ios">
        <preference name="IOS_FIREBASE_POD_VERSION" default="9.3.0" />
        <resource-file src="GoogleService-Info.plist" />
        <preference name="WKWebViewOnly" value="true" />
        <feature name="CDVWKWebViewEngine">
            <param name="ios-package" value="CDVWKWebViewEngine" />
        </feature>
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    </platform>
    <plugin name="cordova-plugin-statusbar" source="npm" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <plugin name="cordova-plugin-splashscreen" source="npm" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" />
    <plugin name="cordova-plugin-ionic-webview" source="npm" />
    <plugin name="cordova-plugin-dialogs" source="npm" />
    <plugin name="cordova-plugin-firebase-analytics" source="npm" />
    <plugin name="cordova-plugin-apprate" source="npm" />
    <plugin name="cordova-plugin-device" source="npm" />
    <plugin name="cordova-plugin-keyboard" source="npm" />
    <plugin name="cordova-plugin-androidx-adapter" source="npm" />
    <content src="index.html" />
</widget>
